APP_ENV=development

EMAIL_DB_USER=postgres
EMAIL_DB_PASSWORD=postgres
EMAIL_DB_NAME=email_db

AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres
AUTH_DB_NAME=auth_db

JWT_SECRET_KEY=replace-with-very-long-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=120

SEED_OWNER_EMAIL=owner@inbox.local
SEED_OWNER_PASSWORD=OwnerPass!123
SEED_ADMIN_EMAIL=admin@inbox.local
SEED_ADMIN_PASSWORD=AdminPass!123
SEED_MEMBER_EMAIL=member@inbox.local
SEED_MEMBER_PASSWORD=MemberPass!123

# base64 for exactly 32 bytes, e.g. python -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
TOKEN_ENCRYPTION_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
MOCK_MODE=true
MOCK_SEED_MESSAGE_COUNT=12

MCP_SSE_HEARTBEAT_SECONDS=5

NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001
NEXT_PUBLIC_GATEWAY_API_URL=http://localhost:8000
